<%= form_tag(products_path, :method => "get", class: "navbar-form", id: "search-form") do %>
<div class="input-append">
<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search for a Product" %>
<button type="submit">Search</button>
</div>
<% end %>

<div id="product_list">
<h1>Listing products</h1>

<div id="accordion">
<% @products.each do |product| %>
   <!--%= render partial: "product", locals: {product: product} %-->
<h3><%= product.title %></h3>
<div>
<table width="100%"><tr>
	<td><%= image_tag(product.image_url, :class => 'list_image') %> </td>
    <td><%= truncate(strip_tags(product.description), :length => 80) %></td>
    <td>
    <%= link_to 'Show', product %><br/>
    <%= link_to 'Edit', edit_product_path(product) %><br/>
    <%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %>
    </td>
</tr></table>
</div>
<% end %>
</div> 
</div>
<center><%= will_paginate @products %></center>
<br/>

<%= link_to 'New product', new_product_path %> 
